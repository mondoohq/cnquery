
import "../core/core.lr"

// Python packages resource
python {
  init(path? string)
  path string
  packages() []python.package
  children() []python.package
}

python.package @defaults("name version") {
  init(path? string)
  id string
  name string
  file core.file
  version string
  license string
  author string
  summary string
  dependencies []python.package
}